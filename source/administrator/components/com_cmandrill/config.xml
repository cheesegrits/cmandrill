<?xml version="1.0" encoding="utf-8" ?>
<config>

	<fieldset name="basic">
		<field name="apiKey" type="text" default="" size="50" label="COM_CMANDRILL_MANDRILL_API_KEY"
			   description="COM_CMANDRILL_MANDRILL_API_KEY_DESC"/>
		<field name="secure" type="radio" default="0" label="COM_CMANDRILL_MANDRILL_HTTPS"
			   description="COM_CMANDRILL_MANDRILL_USE_HTTPS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>


	<fieldset name="permissions"
			  description="JCONFIG_PERMISSIONS_DESC"
			  label="JCONFIG_PERMISSIONS_LABEL"
			>

		<field name="rules" type="rules"
			   component="com_hotspots"
			   filter="rules"
			   validate="rules"
			   label="JCONFIG_PERMISSIONS_LABEL"
			   section="component"/>
	</fieldset>

</config>